#include <iostream>
using namespace std;
int main() {
 char op;
 float a, b;
 cout << "Enter first number: ";
 cin >> a;
 cout << "Enter operator (+, -, *, /): ";
 cin >> op;
 cout << "Enter second number: ";
 cin >> b;
 switch(op) 
 {
 case '+':
 cout << "Result: " << a + b;
 break;
 case '-':
 cout << "Result: " << a - b;
 break;
 case '*':
 cout << "Result: " << a * b;
 break;
 case '/':
 if(b != 0)
 cout << "Result: " << a / b;
 else
 cout << "Error..Can't divide by zero.";
 break;
 default:
 cout << "Error.. Invalid operator.";
 }
 return 0;
}
